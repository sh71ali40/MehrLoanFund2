@page "/Members/AddEdit"
@page "/Members/AddEdit/{MemberId:int}"
 
<AuthorizeView>
    <Authorized>
        <EditForm Model="UserDto" OnValidSubmit="SubmitForm">
            <ChildContent Context="editContext">
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                @ErrorMessage
                            </div>
                        </div>
                    </div>
                }
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                کد ملی
                            </label>
                            <InputText @bind-Value="UserDto.NationalNum" class="form-control"></InputText>
                            <ValidationMessage For="() => UserDto.NationalNum"></ValidationMessage>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                نام
                            </label>
                            <InputText @bind-Value="UserDto.FirstName" class="form-control"></InputText>
                            <ValidationMessage For="() => UserDto.FirstName"></ValidationMessage>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                نام خانوادگی
                            </label>
                            <InputText @bind-Value="UserDto.LastName" class="form-control"></InputText>
                            <ValidationMessage For="() => UserDto.LastName"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                شماره حساب
                            </label>
                            <InputText class="form-control" @bind-Value="UserDto.AccountNum"></InputText>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                شماره کارت
                            </label>
                            <InputText class="form-control" @bind-Value="UserDto.CardNum"></InputText>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                شماره شبا
                            </label>
                            <InputText class="form-control" @bind-Value="UserDto.Sheba"></InputText>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-success float-end">
                            <i class="fas fa-check"></i>
                            ثبت
                        </button>
                        <a href="members" class="btn btn-warning float-end mx-2">
                            <i class="fas fa-ban"></i>
                            انصراف
                        </a>
                    </div>
                </div>
            </ChildContent>
                
        </EditForm>

    </Authorized>
</AuthorizeView>

