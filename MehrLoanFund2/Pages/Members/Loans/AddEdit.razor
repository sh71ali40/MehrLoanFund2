@page "/Members/Loan/AddEdit/{MemberId:int}"
@page "/Members/Loan/AddEdit/{MemberId:int}/{LoanId:int}"
@using MehrLoanFund2.Utilities


<AuthorizeView>
    <Authorized>
        <EditForm Model="LoanDto" OnValidSubmit="SubmitForm">
            <ChildContent Context="editContext">
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                @ErrorMessage
                            </div>
                        </div>
                    </div>
                }
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                پیش پرداخت
                            </label>
                            <InputNumber @bind-Value="LoanDto.PrePayment" class="form-control"></InputNumber>
                            <ValidationMessage For="() => LoanDto.PrePayment"></ValidationMessage>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                حق عضویت
                            </label>
                            <InputNumber @bind-Value="LoanDto.MemberShipFee" class="form-control"></InputNumber>
                            <ValidationMessage For="() => LoanDto.MemberShipFee"></ValidationMessage>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">
                                تعداد اقساط
                            </label>
                            <InputNumber @bind-Value="LoanDto.NumberOfInstallment" class="form-control"></InputNumber>
                            <ValidationMessage For="() => LoanDto.NumberOfInstallment"></ValidationMessage>
                        </div>
                    </div>
                    

                    
                    
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input @bind="LoanDto.IsLoanAssigned" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">
                                    تخصیص وام
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                @if (LoanDto.IsLoanAssigned)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">
                                    مبلغ وام
                                </label>
                                <InputNumber @bind-Value="LoanDto.LoanAmount" class="form-control"></InputNumber>
                                <ValidationMessage For="() => LoanDto.LoanAmount"></ValidationMessage>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">
                                    مبلغ قسط
                                </label>
                                <InputNumber @bind-Value="LoanDto.MonthlyPayment" class="form-control"></InputNumber>
                                <ValidationMessage For="() => LoanDto.MonthlyPayment"></ValidationMessage>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">
                                    تاریخ پرداخت وام
                                </label>
                                @*<InputDate @bind-Value="LoanDto.LoanPaymentDate" class="form-control"></InputDate>*@

                                <MudDatePicker Label="Persian" @bind-Date="LoanDto.LoanPaymentDate" Culture="@Utility.GetPersianCulture()" DateFormat="dd/MM/yyyy" UseShortNames="false" TitleDateFormat="dddd, dd MMMM" />

                                <ValidationMessage For="() => LoanDto.LoanPaymentDate"></ValidationMessage>
                            </div>
                        </div>
                    </div>
                }


                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-success float-end">
                            <i class="fas fa-check"></i>
                            ثبت
                        </button>
                        <a href="members/detail/@MemberId" class="btn btn-warning float-end mx-2">
                            <i class="fas fa-ban"></i>
                            انصراف
                        </a>
                    </div>
                </div>
            </ChildContent>
        </EditForm>
    </Authorized>
</AuthorizeView>